---
export interface Props {
	href: string
	class?: string
}

const { href, class: className } = Astro.props as Props
---

<a
	{href}
	class:list={[
		"font-medium text-neutral-300 no-underline decoration-white underline-offset-4 hover:text-white hover:underline aria-[current='page']:pointer-events-none aria-[current='page']:underline",
		className
	]}
	aria-current={Astro.url.pathname === href ? "page" : null}><slot /></a
>
