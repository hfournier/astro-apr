---
import MainLayout from "@layouts/MainLayout.astro"
import { Image } from "astro:assets"
import { SITE_TITLE } from "src/consts"
import Seo from "@components/seo/Seo.astro"

import assets_images_contact_us_icon_Facebook_by_Freepik_Starline_png from "@assets/images/contact-us/icon-Facebook-by-Freepik-Starline.png"
import assets_images_contact_us_icon_RSS_by_Freepik_Starline_png from "@assets/images/contact-us/icon-RSS-by-Freepik-Starline.png"
import assets_images_contact_us_icon_LinkedIn_by_Freepik_Starline_png from "@assets/images/contact-us/icon-LinkedIn-by-Freepik-Starline.png"

const wpId = 48
const title = "Contact Us"
const description =
	"Email The best and fastest way to connect with us is by emailing contact@agilepainrelief.com &nbsp; Online Address Agile Pain Relief 45 Rosenfeld Cr Ottawa, On K2K 2L2 Are you interested in upcoming Certified Scrum training that isn't yet posted on our calendar? Let us know! Notify Me of Courses Email Address (required) First Name (required) ..."
const status = "publish"
const type = "page"
const createdAt = new Date("2019-09-13T05:45:47")
const modifiedAt = new Date("2024-09-26T16:46:14")
const author = "mark-levison"
---

<MainLayout>
	<Seo slot="head" seo={{ title, description }} options={{ brand: SITE_TITLE }} />
	<style>
		#drip-ef-994879428 {
			width: 100%;
		}
		#drip-ef-994879428 h3 {
		}
		#drip-ef-994879428 > div {
			margin-bottom: 0.75rem;
		}
		#drip-ef-994879428 fieldset {
			border: none;
			margin: 0;
			padding: 0;
		}
		#drip-ef-994879428 legend {
			margin: 0;
			padding: 0;
		}
		#drip-ef-994879428 input[type="email"],
		#drip-ef-994879428 input[type="number"],
		#drip-ef-994879428 input[type="tel"],
		#drip-ef-994879428 input[type="text"] {
			margin: 0;
			padding: 0.375rem 0.5625rem;
			width: 100%;
		}
		#drip-ef-994879428 input[type="checkbox"],
		#drip-ef-994879428 input[type="radio"] {
			margin: 0.1875rem 0.1875rem 0 0;
			padding: 0;
		}
		#drip-ef-994879428 input[type="submit"] {
			margin: 0;
			padding: 0.875rem 1.2625rem;
			margin: 15px 0;
		}
		#drip-ef-994879428 .checkbox_group_title {
			margin-top: 15px;
		}
		#drip-ef-994879428 .checkbox_container {
			margin-bottom: 0.25em;
		}
		#course_notification_form_container {
			max-width: 500px;
		}
	</style>
	<h3>Email</h3>
	<h4>
		The best and fastest way to connect with us is by emailing <a
			href="mailto:contact@agilepainrelief.com">contact@agilepainrelief.com</a>
	</h4>

	<h3>Online</h3>
	<p>
		<a href="https://www.facebook.com/agilepainrelief" target="_blank" rel="noopener noreferrer"
			><Image
				decoding="async"
				alt="Facebook icon by Starline/ Freepik"
				width="50"
				height="50"
				src={assets_images_contact_us_icon_Facebook_by_Freepik_Starline_png}
			/></a
		><a
			href="https://feeds.feedburner.com/NotesFromAToolUser"
			target="_blank"
			rel="noopener noreferrer"
			><Image
				decoding="async"
				alt="RSS icon by Starline/ Freepik"
				width="50"
				height="50"
				src={assets_images_contact_us_icon_RSS_by_Freepik_Starline_png}
			/></a
		><a href="https://www.linkedin.com/in/marklevison" target="_blank" rel="noopener noreferrer"
			><Image
				decoding="async"
				alt="LinkedIn icon by Starline/ Freepik"
				width="50"
				height="50"
				src={assets_images_contact_us_icon_LinkedIn_by_Freepik_Starline_png}
			/></a>
	</p>

	<h3>Address</h3>
	<p>
		Agile Pain Relief<br />
		45 Rosenfeld Cr<br />
		Ottawa, On<br />
		K2K 2L2
	</p>
	<hr />
	<p>
		Are you interested in upcoming <a href="/certified-scrum-agile-training"
			>Certified Scrum training</a
		> that isn&#8217;t yet posted on our calendar? Let us know!
	</p>
	<div id="course_notification_form_container">
		<form
			action="https://www.getdrip.com/forms/994879428/submissions"
			method="post"
			data-drip-embedded-form="994879428"
			id="drip-ef-994879428">
			<h3 data-drip-attribute="headline">Notify Me of Courses</h3>
			<div>
				<label for="drip-email">Email Address (required)</label><br />
				<input type="email" id="drip-email" name="fields[email]" value="" />
			</div>
			<div>
				<label for="drip-first-name">First Name (required)</label><br />
				<input type="text" id="drip-first-name" name="fields[first_name]" value="" />
			</div>
			<div>
				<label for="drip-last-name">Last Name</label><br />
				<input type="text" id="drip-last-name" name="fields[last_name]" value="" />
			</div>
			<div data-drip-attribute="description">Notify me of dates for:</div>
			<div>
				<input type="hidden" name="fields[csm_notification]" value="" /><input
					type="checkbox"
					name="fields[csm_notification]"
					value="CSM"
				/> Certified ScrumMaster Training
			</div>
			<div>
				<input type="hidden" name="fields[cspo_notification]" value="" /><input
					type="checkbox"
					name="fields[cspo_notification]"
					value="CSPO"
				/> Certified Scrum Product Owner training
			</div>
			<div>
				<input type="hidden" name="fields[acsm_notification]" value="" /><input
					type="checkbox"
					name="fields[acsm_notification]"
					value="ACSM"
				/> Advanced Certified ScrumMaster training
			</div>
			<div aria-hidden="true">
				<label for="website">Website</label><br />
				<input
					type="text"
					id="website"
					name="website"
					tabindex="-1"
					autocomplete="false"
					value=""
				/>
			</div>
			<p>
				<input
					type="hidden"
					name="tags[]"
					id="tags_"
					value="Clicked - Form - Notify Me - Courses"
					tabindex="-1"
				/>
			</p>
			<div>
				<input type="submit" value="Submit" data-drip-attribute="sign-up-button" />
			</div>
		</form>
	</div>
</MainLayout>
