---
import MainLayout from "@layouts/MainLayout.astro"
import { Image } from "astro:assets"
import { SITE_TITLE } from "src/consts"
import Seo from "@components/seo/Seo.astro"

import assets_images_newsletter_The_Guide_to_Effective_Agile_Retrospectives_temp_book_cover_791x1024_jpg from "@assets/images/newsletter/The-Guide-to-Effective-Agile-Retrospectives-temp-book-cover-791x1024.jpg"

const wpId = 46
const title = "Newsletter"
const description =
	"Subscribe to the Agile Pain Relief newsletter. One email every two weeks. With tips on Effective Scrum and Influence for Agile Managers and Product Owners. Get the latest Agile news, tips, and advance notice of upcoming courses and promotions.  Bonus: receive a free copy of The Guide to Effective Agile Retrospectives eBook and support email ..."
const status = "publish"
const type = "page"
const createdAt = new Date("2019-09-13T05:43:52")
const modifiedAt = new Date("2024-09-13T15:21:07")
const author = "mark-levison"
---

<MainLayout>
	<Seo slot="head" seo={{ title, description }} options={{ brand: SITE_TITLE }} />
	<h3 data-drip-attribute="headline">Subscribe to the Agile Pain Relief newsletter.</h3>
	<div data-drip-attribute="description">
		<p>
			One email every two weeks. With tips on Effective Scrum and Influence for Agile Managers and
			Product Owners.
		</p>
		<p>Get the latest Agile news, tips, and advance notice of upcoming courses and promotions.</p>
		<p>
			<Image
				decoding="async"
				alt="The Guide to Effective Agile Retrospectives by Mark Levison"
				width="696"
				height="1024"
				src={assets_images_newsletter_The_Guide_to_Effective_Agile_Retrospectives_temp_book_cover_791x1024_jpg}
			/>
		</p>
		<p>
			Bonus: receive a free copy of <em
				><strong>The Guide to Effective Agile Retrospectives</strong></em
			> eBook and support email series!
		</p>
	</div>
	<form
		action="https://www.getdrip.com/forms/575792642/submissions"
		method="post"
		data-drip-embedded-form="575792642">
		<div>
			<label for="drip-email">* Email Address (required)</label><br />
			<input id="drip-email" name="fields[email]" type="email" value="" />
		</div>
		<div>
			<label for="drip-first-name">* First Name (required)</label><br />
			<input id="drip-first-name" name="fields[first_name]" type="text" value="" />
		</div>
		<div>
			<label for="drip-last-name">Last Name (optional)</label><br />
			<input id="drip-last-name" name="fields[last_name]" type="text" value="" />
		</div>
		<div>
			<label for="drip-note">Location (optional)</label><br />
			<input id="drip-note" name="fields[note]" type="text" value="" />
		</div>
		<div aria-hidden="true">
			<label for="website">Website</label><br />
			<input id="website" tabindex="-1" autocomplete="false" name="website" type="text" value="" />
		</div>
		<div><input type="submit" value="Subscribe" data-drip-attribute="sign-up-button" /></div>
	</form>
</MainLayout>
